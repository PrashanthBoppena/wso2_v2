{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "Receiver_MSISDN": {
      "type": "string",
      "minLength": 7,
      "maxLength": 10,
      "pattern": "^[0-9]+$"
    },
    "req_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "system": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "pattern": "^[A-Za-z]+$"
    },
    "message": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "Receiver_MSISDN",
    "req_id",
    "system",
    "message"
  ]
}